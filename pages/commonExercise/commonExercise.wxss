page {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.exercise {
  padding: 30rpx;
  color: #333;
}

.question {
  line-height: 1;
}

.question-type {
  font-size: 12px;
  margin-right: 12rpx;
  line-height: 18px;
  height: 18px;
  width: 80rpx;
  text-align: center;
  display: inline-block;
  border: 2rpx solid rgb(92, 241, 92);
  border-radius: 10rpx;
  color: wheat;
}

.question-dec {
  font-size: 20px;
  line-height: 28px;
}

.demo-text-1 {
  background-color: rgb(142, 233, 142);
}

.demo-text-2 {
  background-color: red;
}

.demo-text-3 {
  background-color: orange;
}

.swiper {
  flex: 1;
}

.swiper-item {
  height: 100%;
}

.answer {
  margin-top: 20rpx;
}

.answer-item {
  padding: 12px 20px;
  font-size: 18px;
  background: #f5f5f5;
  margin-bottom: 20rpx;
  border-radius: 20px;
}

.answer-item.success {
  background-color: #24c28d;
}

.answer-item.error {
  background-color: #ff4849;
}

.answer-type {
  margin-right: 8px;
}

.classic-list {
  display: flex;
  flex-wrap: wrap;
  padding: 30rpx;
  padding-bottom: 130rpx;
}

.classic-list-item {
  width: 90rpx;
  height: 90rpx;
  margin: 0 20rpx 20rpx 0;
  line-height: 90rpx;
  border-radius: 50%;
  border: 1px solid #fff;
}

.classic-list-item.success {
  border: 1px solid #24c28d;
}

.classic-list-item.error {
  border: 1px solid #ff4849;
}

.classic-list-item:nth-child(6n) {
  margin-right: 0;
}

.cu-dialog {
  height: 40%;
}

.image {
  width: 100%;
}