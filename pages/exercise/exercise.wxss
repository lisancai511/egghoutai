page {
  height: 100%;
  display: flex;
  flex-direction: column;
}
.exercise {
  padding: 30rpx;
  color: #333;
}
.question-type {
  padding: 10rpx 20rpx;
  font-size: 12px;
  color: #fff;
  background-color: rgb(172, 231, 172);
  margin-right: 12rpx;
}
.question-dec {
  font-size: 20px;
  line-height: 28px;
}
.demo-text-1 {
  background-color: rgb(142, 233, 142);
}
.demo-text-2 {
  background-color: red;
}
.demo-text-3 {
  background-color: orange;
}

.swiper {
  flex: 1;
}
.swiper-item {
  height: 100%;
}

.answer {
  margin-top: 20rpx;
}
.answer-item {
  padding: 12px 20px;
  font-size: 18px;
  background: #f5f5f5;
  margin-bottom: 20rpx;
  border-radius: 20px;
}
.answer-item.success {
  background-color: #24c28d;
}
.answer-item.error {
  background-color: #ff4849;
}
.answer-type {
  margin-right: 8px;
}