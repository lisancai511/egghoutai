page {
  height: 100%;
  display: flex;
  flex-direction: column;
}
.exercise {
  padding: 30rpx;
  color: #333;
}
.question {
  line-height: 1;
}
.question-type {
  font-size: 12px;
  margin-right: 12rpx;
  line-height: 18px;
  height: 18px;
  width: 80rpx;
  text-align: center;
  display: inline-block;
  border: 2rpx solid rgb(92, 241, 92);
  border-radius: 10rpx;
  color: wheat;
}
.question-dec {
  font-size: 20px;
  line-height: 28px;
}
.demo-text-1 {
  background-color: rgb(142, 233, 142);
}
.demo-text-2 {
  background-color: red;
}
.demo-text-3 {
  background-color: orange;
}

.swiper {
  flex: 1;
}
.swiper-item {
  height: 100%;
}

.answer {
  margin-top: 20rpx;
}
.answer-item {
  padding: 12px 20px;
  font-size: 18px;
  background: #f5f5f5;
  margin-bottom: 20rpx;
  border-radius: 20px;
}
.answer-item.success {
  background-color: #24c28d;
}
.answer-item.error {
  background-color: #ff4849;
}
.answer-type {
  margin-right: 8px;
}